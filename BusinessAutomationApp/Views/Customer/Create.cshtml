@{
    Layout = "_AdminLayout";
}
@model CustomerCreate
@* @model IEnumerable<CustomerCreate> *@
<h2>Customer Create</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control"  asp-for="Name" placeholder="Enter Name">
       <span asp-validation-for="Name" class="text-danger"></span> 
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" placeholder="Enter Phone">
        <span asp-validation-for="Phone" class="text-danger"></span> 
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" class="form-control"  asp-for="Email" placeholder="Enter Email">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>